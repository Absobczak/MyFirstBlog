<h1>All posts by <% @user.username %></h1>


<% @user.posts.each do |post| %>

    <div class="row" id="black-cat">
        <div class="col-md-8 col-md-offset-s">
            <div class="well">
                <h3><%= post.title %></h3>
                <p><em>posted on <% post.created_at %></em></p>
                
                <p>
                    <%= post.blog_entry.html_safe %>
                </p>
                
                <p>
                    <%= link_to 'show', post, class: "btn btn-info" %>
                    <% if current_user.id == post.user.id %>
                        <%= link_to 'edit', edit_post_path(post), class: "btn btn-success" %>
                        <%= link_to 'destroy', post, method: :delete, data: {confirm: 'Are you sure??'}, class: "btn btn-danger" %>
                    <% end %>
                </p>
                
            </div>
        </div>
    </div>
<% end %>



